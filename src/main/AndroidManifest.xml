<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_learning"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleInstance">
        <activity android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".Activities.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.TimerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.MissionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.MissionResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.WrongMode"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.CompetitionActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".Activities.CompetitionStart"
            android:screenOrientation="landscape"/>
        <activity android:name=".Activities.QuestionBookActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.AchievementsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DailyAttendanceActivity"
            android:screenOrientation="portrait"/>
        <receiver android:name=".Receivers.AlarmReceiver">
            <intent-filter>
                <action android:name="NotificationAlarm" />
            </intent-filter>
        </receiver>
    </application>

</manifest>