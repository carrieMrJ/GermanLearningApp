<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg" >

    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg_nocorner"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_timer_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Pause"
            android:textColor="#a64dff"
            android:textSize="18.0dip" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">


            <Button
                android:id="@+id/btn_timer_dialog_continue"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_btn"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Continue"
                android:textColor="#6666ff"
                android:textSize="15dp" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>