<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_line_dash"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_competition_shutdown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/BarItem"
            android:background="@drawable/icon_back_yellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_competition_redP"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="2"
            android:gravity="center"
            android:background="@color/colorLightRed"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/tv_competition_blueP"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="3"
            android:background="@color/colorSkyBlue"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
           android:id="@+id/tv_competition_countDown"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="00:00"
           android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>